<h1>Listing leagues</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Creator</th>
      <th>Start week</th>
      <th>Join</th>
      <th>Rankings</th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= link_to league.name, league %></td>
        <td><%= league.user.username %></td>
        <td><%= league.start_week %></td>
        <td>
          <% if (league.private) %>
          Private
        <% else %>
          <%= link_to "Join", new_team_path(league), class: 'btn btn-primary' %>
        <% end %>
        </td>
        <td><%= link_to "Rankings", league_rankings_path(league), class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New League', new_league_path %>
