<h1>Listing leagues</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Creator</th>
      <th>Private</th>
      <th>Start week</th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= link_to league.name, league %></td>
        <td><%= league.user.username %></td>
        <td><%= league.private ? "Yes" : "No"%></td>
        <td><%= league.start_week %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New League', new_league_path %>
