<h1>Ranking for <%= @league.name %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Team</th>
      <th>Points</th>
      <th>Budget</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team %></td>
        <td><%= team.points %></td>
        <td><%= team.budget %></td>
      </tr>
    <% end %>
  </tbody>
</table>
