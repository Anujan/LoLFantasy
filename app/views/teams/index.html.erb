<h1>My teams</h1>

<table class="table">
  <thead>
    <tr>
      <th>Team</th>
      <th>League</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.league.name %></td>
        <td><%= link_to 'Manage', manage_team_path(team) %></td>
      </tr>
    <% end %>
  </tbody>
</table>