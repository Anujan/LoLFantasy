</head>
<body>
	<div class="header ">
		<div class="container">
			<div class="logo">
				<a href="<%= url_for root_path %>"><%= image_tag "logo.png" %></a>
			</div>
			<nav id="main_menu">
				<div class="menu_wrap">
					<ul class="nav sf-menu">
						<%= nav_link "Home", root_path %>
						<%= nav_link "Leagues", leagues_path %>
						<% if user_signed_in? %>
							<%= nav_link "My Teams", teams_path	%>
							<%= nav_link "Sign out", destroy_user_session_path, method: :delete %>
						<% else %>
							<%= nav_link "Sign in", new_user_session_path %>
							<%= nav_link "Sign up", new_user_registration_path %>
						<% end %>
					</ul>
				</div>
			</nav>
		</div>
	</div>
	<div class="container wrapper">
		<div class="inner_content">
			<div class="ads" id="ad_box">
				<script type="text/javascript">
				window.MyAdSense.newAd(document.getElementById('ad_box'), {
				  'ad_slot': "8690024786",
				  'ad_width': 728,
				  'ad_height': 90
				});
				</script>
			</div>
			<%= bootstrap_flash %>
			<%= yield %>
		</div>
	</div>
	<!--//page-->
	<div id="footer2">
		<div class="container">
			<div class="row">
				<div class="span12">
					<div class="copyright">
						LoLFantasy
						&copy; 2013
								- All Rights Reserved
							</div>
						</div>
					</div>
				</div>
			</div>
			<a href="#"><i class="go-top hidden-phone hidden-tablet  icon-double-angle-up"></i></a>
			<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-34465335-1']);
  _gaq.push(['_trackPageview']);
  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
	</body>
	</html>